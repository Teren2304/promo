extends ../template/template.pug
block content
	.page
		+header(style="background-image: url('./img/header/img/header-index.jpg')")
			+nav.nav--default
				.container.flex-container.align-middle.align-justify
					+logo('/')
					+menu
					+show-menu

			.container-fluid
				.container
					.header__info.text-center
						h1.h1.h1--white Все самые актуальные Промо туры во все точки Мира
						hr
						h6.h6.h6--white Oт основных Туристических Операторов Украины, России, Казахстана и Белоруссии. 

			.container-fluid
				.container
					+search

		main.main
			section.section#options
				.container-fluid
					.container
						.flex-container.align-middle.align-justify
							+sort
							+view

			section.section#proposal
				.container-fluid
					.container
						.row
							.cell
								+offer
							.cell
								+offer
							.cell
								+offer
							.cell
								+offer
							.cell
								+offer
							.cell
								+offer
							.cell
								+offer
							.cell
								+offer

						+button('button').button--primary.button--more Загрузить записи

			section.section#feedback
				.container-fluid
					.container
						.row.align-center.align-middle
							.col-12.col-sm-12.col-md-6.col-lg-5.col-xl-4
								h6.h6.h6--white.text-shadow Долго не обновляются цены на сайте, желаете разместить рекламу?
									br
									span Пожалуйста напишите нам об этом на 
									a(href="#").font--white.text-underline info@promotour.net
									br
									span или воспользуйтесь формой обратной связи
							.col-12.col-sm-12.col-md-6.col-lg-5.col-xl-4
								+form

		+footer