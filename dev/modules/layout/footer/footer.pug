mixin footer(item)
	footer.footer&attributes(attributes)
		.container-fluid.footer__info
			.container
				.row.align-justify
					.col-12.col-sm-12.col-md-12.col-lg-12.col-xl-12
						+logo
						.description
							p.font.font--white.font--lg Свяжитесь с нами: 
								a(href="#").font--white.text-underline info@promotour.net
							.flex-container.align-middle.flex-wrap.social
								p.font.font--white.font--lg(style="margin-right: 10px;") Мы в социальный сетях:
								a.fab.fa-facebook-f.social__item(href="#", target="_blank")
								a.fab.fa-instagram.social__item(href="#", target="_blank")
								a.fab.fa-telegram-plane.social__item(href="#", target="_blank")

					.col-12.col-sm-12.col-md-6.col-lg-6.col-xl-2
						p.font.font--white.text-uppercase Туры из Украины
						hr
						ul
						a.more.text-left.link(title="Загрузить больше", count="1")#ukraine

					.col-12.col-sm-12.col-md-6.col-lg-6.col-xl-2
						p.font.font--white.text-uppercase Туры из России
						hr
						ul
						a.more.text-left.link(title="Загрузить больше", count="1")#russia

					.col-12.col-sm-12.col-md-6.col-lg-6.col-xl-2
						p.font.font--white.text-uppercase Туры из Белоруссии
						hr
						ul
						a.more.text-left.link(title="Загрузить больше", count="1")#belarus

					.col-12.col-sm-12.col-md-6.col-lg-6.col-xl-2
						p.font.font--white.text-uppercase Туры из Казахстана
						hr
						ul
						a.more.text-left.link(title="Загрузить больше", count="1")#kazahstan

					.col-12.col-sm-12.col-md-6.col-lg-6.col-xl-2
						p.font.font--white.text-uppercase Информация
						hr
						- var links = [{link: "blog.html", name: "Блог"},{link: "about.html", name: "Кто мы"},{link: "faq.html", name: "Вопросы и Ответы"}];
						ul
							each item in links
								li
									a(href=item.link).font.font--white.link= item.name

		.container-fluid.footer__copyright
			.container.text-center
				p.font.font--white &copy; 2019 Promo Tour